<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header"><h3>Edit Note</h3></div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" class="form-control" name="tittle" placeholder="Tittle" value="{{note.tittle}}">
                    <br>
                    <textarea class="form-control" name="content">{{note.content}}</textarea>
                    <br>
                    <div class="form-group">
                        <div class="d-grid gap-2">
                        <button class="btn btn-success btn-block" type="submit">Save</button>
                    </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
